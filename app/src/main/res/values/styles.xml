<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="wrapView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>


    <!-- TEXTO -->

    <style name="titulo" parent="wrapView">
        <item name="android:textColor">@color/cor_texto</item>
        <item name="android:textSize">28dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="titulo.bold" parent="titulo">
        <item name="android:textStyle">bold</item>
    </style>


    <style name="texto" parent="wrapView">
        <item name="android:textColor">@color/cor_texto</item>
        <item name="android:textSize">13dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>


    <style name="detalhe" parent="wrapView">
        <item name="android:textColor">@color/cor_texto</item>
        <item name="android:textSize">10dp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <!-- DIVISOR -->

    <style name="divisorHorizontal" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.7dp</item>
        <item name="android:background">@color/cor_divisor</item>
    </style>

</resources>